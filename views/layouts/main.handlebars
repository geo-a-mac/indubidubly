<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Indubidubly</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/fdd637c7d0.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <header>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand">
        <img src="stylesheets/images/img.png" class="width: 200px height: 200px;" class="navbar-brand" />
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collection of nav links, forms, and other content for toggling -->
        <div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
          <div class="navbar-nav">
            <a href="/" class="nav-item nav-link">Home</a>
            <a href="#" class="nav-item nav-link">About</a>
            <div class="nav-item dropdown">
              <a href="#" data-toggle="dropdown" class="nav-item nav-link dropdown-toggle">Services</a>
              <div class="dropdown-menu">
                <a href="#" class="dropdown-item">Job Seeker</a>
                <a href="/employers" class="dropdown-item">Employer</a>
              </div>
            </div>
          </div>
          <div>
          </div>

          <!-- Log in form -->
          <div class="navbar-nav ml-auto action-buttons">
            <div class="nav-item dropdown" data-toggle="dropdown">
              {{#if loggedIn}}
              <button id="logout" class="btn">Logout</button>
              {{else}}
              <a data-toggle="dropdown" class="nav-link dropdown-toggle mr-4">Login</a>
              <div class="dropdown-menu action-form">
                {{> login}}
              
              </div>
            </div>

            <!-- sign up form -->
            <div class="nav-item dropdown">
              <a data-toggle="dropdown" class="btn btn-primary dropdown-toggle sign-up-btn">Sign up</a>
              <div class="dropdown-menu action-form">
                {{> signup}}
              </div>
            </div>
              {{/if}}
          </div>
          {{/if}}
        </div>
    </nav>
  </header>

  <main>
    {{{ body }}}
  </main>

  <!--footer-->
  <footer class="page-footer text-center text-white navbar-light bg-light" id="footer-bottom">
    <!-- Grid container -->
    <div class="container pt-4">
      <!-- Section: Social media -->
      {{> footer}}
      <!-- Section: Social media -->
    </div>
    <!-- Grid container -->
    <!-- Copyright -->
    <div class="text-center text-dark p-3" style="background-color: rgba(0, 0, 0, 0.2);">
      Â© 2020 Copyright:
      <a class="text-dark" href="https://Indubidubly.com/">Indubidubly</a>
    </div>
    <!-- Copyright -->
  </footer>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <script src="/javascript/logout.js"></script>
  {{#unless loggedIn}}
  <script src="/javascript/login.js"></script>
  {{/unless}}
</body>

</html>